<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <link rel="stylesheet" type="text/css" href="/styles/style.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,wght@0,200;0,300;0,400;0,600;0,700;1,200;1,300;1,400;1,600;1,700&family=Poppins:wght@300;400;700&family=Roboto:ital,wght@0,300;0,400;1,300&display=swap" rel="stylesheet">

  
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Jean's journal</title>

  <style>
    body{
      font-family: 'Nunito Sans', sans-serif; 
      background-color: #0F8072 ;
      background-image: linear-gradient(315deg, #0F8072 0%, #002231 74%); 
      }
    .wrapper{
      border-radius: 5px;
    }
    .even-notes{
      border: 1px;
      border-radius: 5px;
      transition: 0.5s;
    }
    .even-notes:hover{
      background-color:lightsteelblue
    }

    .odd-notes{
      border-radius: 10px;
    }

    .odd-notes:hover{
      background-color:lightsteelblue
    }

    .buttons{
      border-radius: 5px;
    }

    .menu-links:hover{
      background-color:#00B88C;
      transition: 0.5s;
      transform: scale(0.98);
    }

    .menu-links{
      background-color: #374151 ;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.7);
    }

    .readmore-publish{

      background-color:#00B88C;
      transition: 0.5s;

    }

    .readmore-publish:hover{
       background-color: lightsteelblue;
    }

    .edit-cancel{

      background-color: #374151;
      transition: 0.5s;

    }
    .edit-cancel:hover{
      background-color: lightsteelblue;
    }

    @media screen and (max-width: 1000px) {
      .bigwrapper{
        flex-direction: column;
        border: solid 1px white;
      }

      #navbar{
        width:100%;
        border-radius: 0%;
        margin-top: 0px;
      }

      #notes-wrapper{
        width: 100%;
        margin-top:0px;
        border-radius: 0%;
        padding: 2px;
      }

      }

    
  </style>
</head>
<body class="bg-gray-800 font-Nuni ">

  <div class=" bigwrapper w-12/12 mx-auto flex justify-center "> 

    <nav id="navbar" class="mt-12 p-4 bg-white w-2/12 wrapper">
                  
        
      <ul class="mt-6 ">
        
        <a href="/posts/newNote" class=" border-2 px-4 py-1 bg-jean-blue text-white  mt-0 inline-block w-full mt-4 text-center buttons menu-links" >+New Note</a>
        <a href="https://jean-portfolio-nextjs.vercel.app/" class=" border-2 px-4 py-1 bg-jean-blue text-white  mt-0 inline-block w-full mt-4 text-center buttons menu-links" >My Portfolio</a>
        
        
        
        
      </ul>
  
     </nav>

    <div id="notes-wrapper" class="  border-2  w-6/12 mt-12 p-10 bg-gray-200 wrapper">
       
        
        
        
    
        <% posts.forEach(post => { %>
          
    
          
    
          <% if(posts.indexOf(post)%2== 0){ %>
            
            <div class="  w-12/12 mt-4 odd-notes bg-gray-300 note-box">
              <div class=" note-box border-2 p-4 overflow-auto rounded-xl">
                <h4 class="mb-6 text-3xl font-bold"><%= post.title %></h4>
                <div class=" w-24 p-2 text-green-800 text-xl font-bold " >
                  <%= post.createdAt.getDate()+"."+post.createdAt.getMonth()+"."+post.createdAt.getFullYear() %>
                </div>
                <div class="mt-2 mb-2 text-black font-bold"><%= post.description %></div>
                <a href="posts/<%= post.slug %>" class=" border-2 px-4 py-1 bg-green-800 text-white float-left mt-0 inline buttons readmore-publish" >Read More...</a>
                <a href="posts/edit/<%= post.id %>" class=" border-2 px-4 py-1 bg-gray-700 text-white float-right mt-0 inline buttons edit-cancel">Edit</a>
                
              </div>
            </div>
           <% } else{ %>  
            <div class="   w-12/12 mt-4 even-notes bg-white">
              <div class="border-2 p-4 overflow-auto rounded-xl">
                <h4 class="mb-6 text-3xl font-bold "><%= post.title %></h4>
                <div class=" w-24 p-2 text-green-800 text-xl font-bold " >
                  <%= post.createdAt.getDate()+"."+post.createdAt.getMonth()+"."+post.createdAt.getFullYear() %>
                </div>
                <div class="mt-2 mb-2 text-black font-bold"><%= post.description %></div>
                <a href="posts/<%= post.slug %>" class=" border-2 px-4 py-1 bg-green-800 text-white float-left mt-0 inline readmore-publish buttons" >Read More...</a>
                <a href="posts/edit/<%= post.id %>" class=" border-2 px-4 py-1 bg-gray-700 text-white float-right mt-0 inline edit-cancel buttons">Edit</a>
                
              </div>
            </div>
          <% } %>
    
            
    
        <% }) %>

      </div>
  
    

  </div>
  

  
</body>
</html>